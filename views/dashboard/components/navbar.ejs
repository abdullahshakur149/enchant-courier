<div class="container">
    <header id="header" class="header fixed-top d-flex align-items-center justify-content-between">

        <div class="d-flex align-items-center">
            <a href="/admin-panel" class="logo d-flex align-items-center">
                <img src="img/logo.png" alt="">
                <span style="color: #78191c;" class="d-none d-lg-block">Enchant <span
                        style="color: #243064;">Admin</span></span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>


            <div class="search-bar">
                <form class="search-form d-flex align-items-center" method="POST" action="#">
                    <input type="text" id="searchInput" name="query" placeholder="Search" title="Enter search keyword">
                    <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                </form>
            </div><!-- End Search Bar -->
        </div>


        <!-- Logout Button -->
        <div class="logout-button">
            <button id="logoutButton" class="btn btn-danger">
                <i class="bi bi-box-arrow-left"></i> Logout
            </button>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script>
            document.getElementById('logoutButton').addEventListener('click', function (event) {
                event.preventDefault();

                axios.delete('/logout')
                    .then(response => {
                        window.location.reload();
                    })
                    .catch(error => {
                        console.error('Logout Error:', error);
                        alert("Error logging out. Please try again.");
                    });
            });
        </script>


    </header><!-- End Header -->
</div>