<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Form</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Index CSS -->
    <link rel="stylesheet" href="css/index.css" />

    <!-- Toastify CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    <!-- Axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>

    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>Enter Order Information</h3>
                        <p>Fill in the data below.</p>
                        <form id="registrationForm" class="requires-validation" novalidate>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="trackingNumber"
                                    placeholder="Tracking Number" required>
                            </div>

                            <div class="col-md-12 mt-3">
                                <input class="form-control" type="text" name="flyNumber" placeholder="Fly Number"
                                    required>
                            </div>

                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Listen for the form submission
        document.querySelector('form').addEventListener('submit', (e) => {
            e.preventDefault();
            submitForm();
        });

        // Function to handle form submission
        function submitForm() {
            const form = document.querySelector('#registrationForm');
            const formData = new FormData(form);

            // Convert FormData to JSON format
            const jsonData = {};
            formData.forEach((value, key) => {
                jsonData[key] = value;
            });

            submitFormData(jsonData);
        }

        // Function to submit the form data using Axios
        function submitFormData(jsonData) {
            axios.post('/order/submit-order', jsonData)
                .then(response => {
                    // Check if the response status is success
                    if (response.data.status === 'success') {
                        Toastify({
                            text: response.data.data.message,
                            style: { background: "green" }
                        }).showToast();
                        // Clear the form fields
                        document.querySelector('#registrationForm').reset();
                    } else {
                        Toastify({
                            text: response.data.data.message,
                            style: { background: "red" }
                        }).showToast();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Toastify({
                        text: 'An error occurred. Please try again.',
                        style: { background: "red" }
                    }).showToast();
                });
        }
    </script>

    <!-- Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>
</body>

</html>